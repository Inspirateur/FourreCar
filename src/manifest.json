{
  "manifest_version": 3,
  "name": "FourreCar",
  "version": "0.1.0",
  "description": "Facilite la commande de courses Carrefour",
  "icons": {
    "48": "icons/FourreCar-48.png",
    "96": "icons/FourreCar-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.carrefour.fr/s?*"
      ],
      "js": [
        "fourrecar.js"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/FourreCar-32.png",
    "default_title": "FourreCar"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "fourrecar.kek@gmail.com",
      "strict_min_version": "42.0"
    }
  },
  "host_permissions": [
    "*://*.carrefour.fr/s?*"
  ]
}